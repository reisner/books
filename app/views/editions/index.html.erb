<p id="notice"><%= notice %></p>

<h2>Listing Editions</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editions.each do |edition| %>
      <tr>
        <td><%= link_to 'Show', [@book, edition] %></td>
        <td><%= link_to 'Edit', edit_book_edition_path(@book, edition) %></td>
        <td><%= link_to 'Destroy', [@book, edition], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Edition', new_book_edition_path(@book) %>
